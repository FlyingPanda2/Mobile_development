<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#bf9ded"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >

    <TextView
        android:id="@+id/phone_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.Huawei Mate 50 Pro"
        android:textSize="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lauch Price:"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/lauch_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1299"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lauch Date:"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/lauch_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sep, 2022"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera Scope:"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/camera_scope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="149"
            android:textSize="20dp"
            />

    </LinearLayout>

</LinearLayout>